<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- 注册 -->
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>controller.RegisterController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!--登录请求-->
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>


    <!--查询所有种类-->
    <servlet>
        <servlet-name>selectAllKind</servlet-name>
        <servlet-class>controller.SelectAllKindController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>selectAllKind</servlet-name>
        <url-pattern>/selectAllKind</url-pattern>
    </servlet-mapping>


    <!--根据kid查询对应种类的所有商品-->
    <servlet>
        <servlet-name>selectCommodity</servlet-name>
        <servlet-class>controller.SelectCommodityController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>selectCommodity</servlet-name>
        <url-pattern>/selectCommodity</url-pattern>
    </servlet-mapping>


    <!--保存商品-->
    <servlet>
        <servlet-name>saveCommodity</servlet-name>
        <servlet-class>controller.SaveCommodityController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>saveCommodity</servlet-name>
        <url-pattern>/saveCommodity</url-pattern>
    </servlet-mapping>


    <!--计算价钱-->
    <servlet>
        <servlet-name>calculatePrice</servlet-name>
        <servlet-class>controller.CalculatePriceController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>calculatePrice</servlet-name>
        <url-pattern>/calculatePrice</url-pattern>
    </servlet-mapping>

    <!--登出-->
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>controller.LogoutController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

</web-app>